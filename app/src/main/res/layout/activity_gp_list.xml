<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".com.example.danishali.assignment03.myapplication.GPList.GpList">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:ignore="MissingConstraints"/>


    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="115dp"
        android:text="General Practitioner"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="168dp"
        android:padding="12dp"
        android:text="Next"
        app:layout_constraintBottom_toTopOf="@+id/tapBarMengplist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />






    <com.michaldrabik.tapbarmenulib.TapBarMenu
        android:id="@+id/tapBarMengplist"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date"
        app:layout_constraintVertical_bias="0.778"
        app:tbm_buttonMarginRight="20dp"
        app:tbm_buttonPosition="right"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">



        <ImageView
            android:id="@+id/bookings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:tint="@color/colorWhite"
            app:srcCompat="@drawable/booking" />

        <Space
            android:layout_width="36dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/qr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:tint="@color/colorWhite"
            app:srcCompat="@drawable/qrcode" />

        <Space
            android:layout_width="36dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:tint="@color/colorWhite"
            app:srcCompat="@drawable/logout" />

        <Space
            android:layout_width="36dp"
            android:layout_height="match_parent" />

        <Space
            android:layout_width="36dp"
            android:layout_height="match_parent" />


    </com.michaldrabik.tapbarmenulib.TapBarMenu>




</android.support.constraint.ConstraintLayout>